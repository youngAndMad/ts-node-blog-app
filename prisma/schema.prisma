// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum SecurityRole {
  GUEST
  USER
  ADMIN
}

model User {
  id            Int          @id @default(autoincrement())
  email         String       @unique
  password      String
  username      String
  otp           Int
  emailVerified Boolean
  otpSentTime   DateTime
  chats         Chat[]
  avatar        String?
  role          SecurityRole @default(GUEST)
}

model Chat {
  id          Int       @id @default(autoincrement())
  createdTime DateTime
  members     User[]
  messages    Message[]
}

model Message {
  id       Int      @id @default(autoincrement())
  chatId   Int
  chat     Chat     @relation(fields: [chatId], references: [id])
  content  String?
  sentTime DateTime
  userId   Int
}
